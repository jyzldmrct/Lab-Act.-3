@page
@model IndexModel
@{
    ViewData["Title"] = "Lab Act 3";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
    <link rel="stylesheet" href="styles.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        body {
            font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
            color: steelblue;
            background-color: white;
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
            background-color: white;
        }

        h1 {
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
        }

        label {
            margin-bottom: 5px;
        }

        input {
            margin-bottom: 10px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .add {
            padding: 5px;
            background-color: white;
            color: steelblue;
            border: thin solid steelblue;
            border-radius: 5px;
            cursor: pointer;
        }

        .add:hover {
            background-color: steelblue;
            color: white;
        }

        .delete {
            background-color: white;
            color: darkred;
            border: thin solid darkred;
            border-radius: 5px;
            cursor: pointer;
        }

        .delete:hover {
            background-color: darkred;
            color: white;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 4px;
        }

        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: center;
            border-radius: 4px;
        }


        th {
            background-color: lightslategrey;
            color: white;
        }
    </style>

</head>
<body>
    <div class="container">
        <h1><b>Interactive To-Do List</b></h1>
        <form id="taskForm">
            <label for="taskName">Task Name:</label>
            <input type="text" id="taskName" name="taskName" placeholder="Enter task name">
            <label for="taskDescription">Task Description:</label>
            <input type="text" id="taskDescription" name="taskDescription" placeholder="Enter task description">
            <button class="add" type="submit">Add Task</button>
        </form>

        <table id="taskTable">
            <thead>
                <tr>
                    <th>Item No.</th>
                    <th>Task Name</th>
                    <th>Task Description</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>


    <script>
        $(document).ready(function () {
            let taskCount = 0;

            $('#taskForm').on('submit', function (event) {
                event.preventDefault();

                const taskName = $('#taskName').val().trim();
                const taskDescription = $('#taskDescription').val().trim();

                if (taskName === '' && taskDescription === '') {
                    alert('Both task name and task description are required.');
                    return;
                } else if (taskName === '') {
                    alert('Task name is required.');
                    return;
                } else if (taskDescription === '') {
                    alert('Task description is required.');
                    return;
                }

                taskCount++;
                const taskRow = `
                        <tr>
                            <td>${taskCount}</td>
                            <td>${taskName}</td>
                            <td>${taskDescription}</td>
                            <td><button class="delete">Delete</button></td>
                        </tr>
                    `;

                $('#taskTable tbody').append(taskRow);
                $('#taskForm')[0].reset();
            });

            $('#taskTable').on('click', '.delete', function () {
                const confirmed = confirm('Are you sure you want to delete this task?');
                if (confirmed) {
                    $(this).closest('tr').remove();
                    updateTaskNumbers();
                    alert('Task deleted.');
                }
            });

            function updateTaskNumbers() {
                taskCount = 0;
                $('#taskTable tbody tr').each(function () {
                    taskCount++;
                    $(this).find('td:first').text(taskCount);
                });
            }
        });
    </script>


</body>
</html>
